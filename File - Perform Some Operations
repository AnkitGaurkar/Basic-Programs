package com;

import java.io.File;
import java.io.IOException;

public class FileOperation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		File f1=new File("C:Ankit.txt");
		if(f1.exists())
		{
			System.out.println("Get FileName:-"+ f1.getName());
			
			System.out.println("Path of File"+f1.getAbsolutePath());
			
			System.out.println("To chake Writable or Not:-"+f1.canWrite());
			
			System.out.println("To chake Readable or Not:-"+f1.canRead());
			
			System.out.println("Chake Length:-"+f1.length());//its get in byte format
			
			System.out.println();
		}
		else
		{
			System.out.println("File does Not Exits");
		}
	}

}
